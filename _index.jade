doctype html
html(lang='')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title PokéSpeedTier
    link(rel='stylesheet', href='stylesheets/app.css')
  body(onload='updateFields()')
    #wrapper.cf
      #header
        h1 PokéSpeedTier
        hr
      #content.cf
        #pkmnInput.cf
          //Pokemon #1
          form#pkmn_1.pkmn(name='pkmn_1', action='#')
            label Pokémon #1
            select#pkmnSelect_1.pkmnSelect
              option(value='Venusaur', selected='') Venusaur
              option(value='Blastoise') Blastoise
              option(value='Charizard') Charizard
              option(value='Electrode') Electrode
            br
            .cf
                label IV
                input#iv_1.iv(value='31')
            br
            .cf
                label EV
                input#ev_1.ev(value='252')
            br
            label Level
            input#level_1.level(value='50')
            br
            label Nature
            select#nature_1.nature
              option(value='+') +
              option(value='N/A', selected='') N/A
              option(value='-') -
            br
            label Ability
            select#ability_1.ability
              option(value='N/A', selected='') N/A
              option(value='unburden') Unburden
              option(value='chlorophyl') Chlorophyl
              option(value='swiftSwim') Swift swim
              option(value='quickFeet') Quick Feet
            br
            label Paralysis
            input#para_1.para(type='checkbox', value='Paralysis')
            .item_mod
              #item
                label Item
                select#item_1.item
                  option(value='None') None
                  option(value='Scarf') Choice Scarf
                  option(value='Power') Power Item
                  option(value='Macho') Macho Brace
                  option(value='Iron') Iron Ball
              #modifier
                label Modifier
                select#modifier_1.modifier
                  option(value='+6') +6
                  option(value='+5') +5
                  option(value='+4') +4
                  option(value='+3') +3
                  option(value='+2') +2
                  option(value='+1') +1
                  option(value='N/A', selected='') N/A
                  option(value='-1') -1
                  option(value='-2') -2
                  option(value='-3') -3
                  option(value='-4') -4
                  option(value='-5') -5
                  option(value='-6') -6
                br
            label Base:
            input#base_1.base(readonly='readonly')
            br
            label Speed:
            input#speed_1.speed(readonly='readonly')
            br
          //Pokemon #2
          form#pkmn_2.pkmn(name='pkmn_2', action='#')
            label Pokémon #2
            select#pkmnSelect_2.pkmnSelect
              option(value='Venusaur') Venusaur
              option(value='Blastoise') Blastoise
              option(value='Charizard', selected='') Charizard
              option(value='Electrode') Electrode
            br
            .cf
                label IV
                input#iv_2.iv(value='31')
            br
            .cf
                label EV
                input#ev_2.ev(value='252')
            br
            .cf
                label Level
                input#level_2.level(value='50')
            br
            label Nature
            select#nature_2.nature
              option(value='+') +
              option(value='N/A', selected='') N/A
              option(value='-') -
            br
            label Ability
            select#ability_2.ability
              option(value='N/A', selected='') N/A
              option(value='unburden') Unburden
              option(value='chlorophyl') Chlorophyl
              option(value='swiftSwim') Swift swim
              option(value='quickFeet') Quick Feet
            br
            label Paralysis
            input#para_2.para(type='checkbox', value='Paralysis')
            .item_mod
              #item
                label Item
                select#item_2.item
                  option(value='None') None
                  option(value='Scarf') Choice Scarf
                  option(value='Power') Power Item
                  option(value='Macho') Macho Brace
                  option(value='Iron') Iron Ball
              #modifier
                label Modifier
                select#modifier_2.modifier
                  option(value='+6') +6
                  option(value='+5') +5
                  option(value='+4') +4
                  option(value='+3') +3
                  option(value='+2') +2
                  option(value='+1') +1
                  option(value='N/A', selected='') N/A
                  option(value='-1') -1
                  option(value='-2') -2
                  option(value='-3') -3
                  option(value='-4') -4
                  option(value='-5') -5
                  option(value='-6') -6
                br
              br
            label Base:
            input#base_2.base(type='text', readonly='readonly')
            br
            label Speed:
            input#speed_2.speed(type='text', readonly='readonly')
            br
        form#output.cf.output(name='output', action='#')
          button#submit(onclick='updateFields()') Submit
          br
          input#outputBox
          br
          button#reset(onclick='restart()') Reset
      #footer
    script(type='text/javascript', src='js/app.js')
    script(type='text/javascript').
      document.write("<script src='js/app.js'><\\/script>");
